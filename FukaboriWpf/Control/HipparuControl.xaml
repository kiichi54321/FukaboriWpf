            <RowDefinition Height="30" />
            <RowDefinition Height="270*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="対象の指定" VerticalAlignment="Center"></TextBlock>
            <ComboBox Name="comboBox1"  Width="160" />
